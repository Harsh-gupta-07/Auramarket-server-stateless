datasource db {
  provider  = "postgresql"
  url  	    = env("USER_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/@prisma/client-user"
}

model User{
    id Int @id @default(autoincrement())
    email String @unique
    name String
    password String
    role String @default("user")
    addresses  Address[]
    favourites Favourite[]
    cart       Cart[]
    orders     Orders[]
}

model Address {
  id           Int    @id @default(autoincrement())
  label        String
  name         String
  addressLine  String
  city     String
  state    String
  pincode    String
  phone        String
  instructions String?
  isPrimary    Boolean @default(false)

  user   User @relation(fields: [userId], references: [id])
  userId Int
}

model Favourite {
  id      Int    @id @default(autoincrement())
  product String
  user    User   @relation(fields: [userId], references: [id])
  userId  Int
}

model Cart {
  id       Int    @id @default(autoincrement())
  productID  Int
  quantity Int

  user   User @relation(fields: [userId], references: [id])
  userId Int
}

model Orders {
  id        Int     @id @default(autoincrement())
  productID     Int
  quantity     Int
  createdAt DateTime @default(now())
  status      String @default("Pending")
  addressID Int?
  user   User @relation(fields: [userId], references: [id])
  userId Int
}